<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for general logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for batch job execution logs -->
    <appender name="BATCH_JOB_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/batch-jobs.log</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"application":"threadly-batch"}</customFields>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/batch-jobs.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>


    <!-- BatchJobLogger는 파일에 직접 쓰므로 별도 설정 불필요 -->


    <!-- General batch logging -->
    <logger name="com.threadly.batch" level="DEBUG"/>
    <logger name="org.springframework.batch" level="INFO"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>